@model Isodoc.Web.Models.ClientEditViewModel
@{
    Layout = "_LayoutAdminSaaS";
    ViewData["Title"] = "Editar Cliente";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Editar Cliente</h2>
        <p class="text-muted mb-0">Atualize os dados da empresa</p>
    </div>
    <a asp-action="Clients" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <form asp-action="EditClient" asp-controller="AdminSaaS" method="post">
            <input type="hidden" asp-for="Id" />
            
            <!-- Dados da Empresa -->
            <h5 class="mb-3 text-primary border-bottom pb-2">Dados da Empresa</h5>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="RazaoSocial" class="form-label">Razão Social</label>
                    <input asp-for="RazaoSocial" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="NomeFantasia" class="form-label">Nome Fantasia</label>
                    <input asp-for="NomeFantasia" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="CNPJ" class="form-label">CNPJ</label>
                    <input asp-for="CNPJ" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="UrlPersonalizada" class="form-label">URL Personalizada</label>
                    <div class="input-group">
                        <span class="input-group-text">isodoc.com.br/</span>
                        <input asp-for="UrlPersonalizada" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <label asp-for="Plano" class="form-label">Plano</label>
                    <select asp-for="Plano" class="form-select">
                        <option value="Free">Free</option>
                        <option value="Standard">Standard</option>
                        <option value="Enterprise">Enterprise</option>
                    </select>
                </div>
            </div>

            <!-- Endereço -->
            <h5 class="mb-3 text-primary border-bottom pb-2">Endereço</h5>
            <div class="row g-3 mb-4">
                <div class="col-md-2">
                    <label asp-for="CEP" class="form-label">CEP</label>
                    <input asp-for="CEP" class="form-control" />
                </div>
                <div class="col-md-8">
                    <label asp-for="Logradouro" class="form-label">Logradouro</label>
                    <input asp-for="Logradouro" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label asp-for="Numero" class="form-label">Número</label>
                    <input asp-for="Numero" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Complemento" class="form-label">Complemento</label>
                    <input asp-for="Complemento" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Bairro" class="form-label">Bairro</label>
                    <input asp-for="Bairro" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Cidade" class="form-label">Cidade</label>
                    <input asp-for="Cidade" class="form-control" />
                </div>
                <div class="col-md-1">
                    <label asp-for="Estado" class="form-label">UF</label>
                    <input asp-for="Estado" class="form-control" />
                </div>
            </div>

            <!-- Financeiro e Controle -->
            <h5 class="mb-3 text-primary border-bottom pb-2">Financeiro e Controle</h5>
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <label asp-for="ValorMensal" class="form-label">Valor Mensal (R$)</label>
                    <input asp-for="ValorMensal" class="form-control" type="number" step="0.01" />
                </div>
                <div class="col-md-4">
                    <label asp-for="DataSuspensao" class="form-label">Data de Suspensão</label>
                    <input asp-for="DataSuspensao" class="form-control" type="date" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Ativo">Ativo</option>
                        <option value="Inativo">Inativo</option>
                        <option value="Suspenso">Suspenso</option>
                    </select>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Clients" class="btn btn-light border">Cancelar</a>
                <button type="submit" class="btn btn-primary px-4">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>

@model Isodoc.Web.Models.Departamento
@{
    ViewData["Title"] = "Novo Departamento";
}

<div class="mb-4">
    <h2><i class="bi bi-diagram-3 me-2"></i>Novo Departamento</h2>
    <p class="text-muted">Cadastre um novo departamento da organização</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome do Departamento *</label>
                <input asp-for="Nome" class="form-control" placeholder="Ex: Produção, Qualidade, Logística" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Responsavel" class="form-label">Responsável</label>
                <input asp-for="Responsavel" class="form-control" placeholder="Nome do responsável pelo departamento" />
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Breve descrição do departamento e suas responsabilidades"></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

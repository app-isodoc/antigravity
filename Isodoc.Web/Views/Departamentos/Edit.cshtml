@model Isodoc.Web.Models.Departamento
@{
    ViewData["Title"] = "Editar Departamento";
}

<div class="mb-4">
    <h2><i class="bi bi-diagram-3 me-2"></i>Editar Departamento</h2>
    <p class="text-muted">Atualize as informações do departamento</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="DataCadastro" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome do Departamento *</label>
                <input asp-for="Nome" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Responsavel" class="form-label">Responsável</label>
                <input asp-for="Responsavel" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="Ativo" class="form-check-input" />
                    <label asp-for="Ativo" class="form-check-label">Departamento Ativo</label>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

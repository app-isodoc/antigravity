@model IEnumerable<Isodoc.Web.Models.Departamento>
@{
    ViewData["Title"] = "Departamentos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-diagram-3 me-2"></i>Departamentos</h2>
        <p class="text-muted">Gerencie os departamentos da organização</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Novo Departamento
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Responsável</th>
                            <th>Descrição</th>
                            <th>Status</th>
                            <th width="150">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var depto in Model)
                        {
                            <tr>
                                <td><strong>@depto.Nome</strong></td>
                                <td>@(depto.Responsavel ?? "-")</td>
                                <td>@(depto.Descricao ?? "-")</td>
                                <td>
                                    @if (depto.Ativo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@depto.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (depto.Ativo)
                                    {
                                        <form asp-action="Delete" asp-route-id="@depto.Id" method="post" class="d-inline" onsubmit="return confirm('Deseja realmente desativar este departamento?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Desativar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-diagram-3" style="font-size: 48px; color: #ccc;"></i>
                <p class="text-muted mt-3">Nenhum departamento cadastrado ainda.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Cadastrar Primeiro Departamento
                </a>
            </div>
        }
    </div>
</div>

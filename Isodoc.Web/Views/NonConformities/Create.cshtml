@model Isodoc.Web.Models.NonConformity
@{
    ViewData["Title"] = "Nova Não Conformidade";
    var users = ViewBag.Users as List<Isodoc.Web.Models.ApplicationUser>;
    var clientes = ViewBag.Clientes as List<Isodoc.Web.Models.ClienteExterno>;
    var departamentos = ViewBag.Departamentos as List<Isodoc.Web.Models.Departamento>;
}

<div class="mb-4">
    <h2><i class="bi bi-plus-circle me-2"></i>Nova Não Conformidade</h2>
    <p class="text-muted">Registre uma nova não conformidade no sistema</p>
</div>

<!-- Tabs de Etapas -->
<ul class="nav nav-tabs mb-4" id="ncTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="identificacao-tab" data-bs-toggle="tab" data-bs-target="#identificacao" type="button" role="tab">
            <i class="bi bi-clipboard-check me-1"></i> Identificação
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link disabled" id="contencao-tab" data-bs-toggle="tab" data-bs-target="#contencao" type="button" role="tab">
            <i class="bi bi-shield-check me-1"></i> Ações de Contenção
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link disabled" id="analise-tab" data-bs-toggle="tab" data-bs-target="#analise" type="button" role="tab">
            <i class="bi bi-search me-1"></i> Análise de Causa
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link disabled" id="corretivas-tab" data-bs-toggle="tab" data-bs-target="#corretivas" type="button" role="tab">
            <i class="bi bi-tools me-1"></i> Ações Corretivas
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link disabled" id="verificacao-tab" data-bs-toggle="tab" data-bs-target="#verificacao" type="button" role="tab">
            <i class="bi bi-check2-circle me-1"></i> Verificação
        </button>
    </li>
</ul>

<form asp-action="Create" method="post" id="ncForm" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="tab-content" id="ncTabContent">
        <!-- Tab 1: Identificação -->
        <div class="tab-pane fade show active" id="identificacao" role="tabpanel">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="bi bi-clipboard-check me-2"></i>Identificação</h5>
                    
                    <!-- Número da NC e Datas -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="form-label">Número da NC</label>
                            <input type="text" class="form-control" id="numeroNC" value="Gerado Automaticamente" readonly style="background-color: #f8f9fa;" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="DataOcorrencia" class="form-label">Data da Ocorrência *</label>
                            <input asp-for="DataOcorrencia" type="date" class="form-control" id="dataOcorrencia" required onchange="calcularPrazo()" />
                            <span asp-validation-for="DataOcorrencia" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="PrazoConclusao" class="form-label">Prazo para Conclusão *</label>
                            <input asp-for="PrazoConclusao" type="date" class="form-control" id="prazoConclusao" required />
                            <span asp-validation-for="PrazoConclusao" class="text-danger"></span>
                            <small class="text-muted">Sugestão: 20 dias</small>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Severidade" class="form-label">Severidade *</label>
                            <select asp-for="Severidade" class="form-select" required>
                                <option value="Baixa">Baixa</option>
                                <option value="Média" selected>Média</option>
                                <option value="Alta">Alta</option>
                                <option value="Crítica">Crítica</option>
                            </select>
                            <span asp-validation-for="Severidade" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Título e Tipo -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="Titulo" class="form-label">Título *</label>
                            <input asp-for="Titulo" class="form-control" placeholder="Título breve da não conformidade" required />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Tipo" class="form-label">Tipo *</label>
                            <select asp-for="Tipo" class="form-select" required>
                                <option value="">Selecione o tipo</option>
                                <option value="Interna">Interna</option>
                                <option value="Externa">Externa</option>
                                <option value="Auditoria">Auditoria</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">Descrição Detalhada *</label>
                        <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva a não conformidade em detalhes" required></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <!-- Cliente Envolvido e Departamento -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ClienteEnvolvidoId" class="form-label">Cliente Envolvido (se aplicável)</label>
                            <select asp-for="ClienteEnvolvidoId" class="form-select" id="clienteSelect">
                                <option value="">Selecione o cliente</option>
                                @if (clientes != null)
                                {
                                    foreach (var cliente in clientes)
                                    {
                                        <option value="@cliente.Id">@cliente.Nome</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Departamento" class="form-label">Departamento/Área</label>
                            <select asp-for="Departamento" class="form-select" id="departamentoSelect">
                                <option value="">Selecione o departamento</option>
                                @if (departamentos != null)
                                {
                                    foreach (var depto in departamentos)
                                    {
                                        <option value="@depto.Nome">@depto.Nome</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Tipo de Incidente -->
                    <div class="mb-3">
                        <label asp-for="TipoIncidente" class="form-label">Tipo de Incidente</label>
                        <input asp-for="TipoIncidente" class="form-control" placeholder="Ex: Produto não conforme, Falha de processo" />
                    </div>
                </div>
            </div>

            <!-- Definição de Responsáveis -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Definição de Responsáveis (Workflow ISO 9001)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="ResponsavelContencaoId" class="form-label">Contenção Imediata</label>
                            <select asp-for="ResponsavelContencaoId" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "Id", "Nome"))">
                                <option value="">Selecione...</option>
                            </select>
                            <small class="text-muted">Quem executará a ação imediata?</small>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ResponsavelAnaliseCausaId" class="form-label">Análise de Causa</label>
                            <select asp-for="ResponsavelAnaliseCausaId" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "Id", "Nome"))">
                                <option value="">Selecione...</option>
                            </select>
                            <small class="text-muted">Quem investigará a causa raiz?</small>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ResponsavelAcaoCorretivaId" class="form-label">Ações Corretivas</label>
                            <select asp-for="ResponsavelAcaoCorretivaId" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "Id", "Nome"))">
                                <option value="">Selecione...</option>
                            </select>
                            <small class="text-muted">Quem planejará a solução definitiva?</small>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ResponsavelVerificacaoId" class="form-label">Verificação da Eficácia</label>
                            <select asp-for="ResponsavelVerificacaoId" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "Id", "Nome"))">
                                <option value="">Selecione...</option>
                            </select>
                            <small class="text-muted">Quem validará se funcionou?</small>
                        </div>
                    </div>
                    <div class="alert alert-info mt-3 mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Os usuários selecionados receberão uma notificação por e-mail e terão permissão exclusiva para editar suas respectivas etapas.
                    </div>
                </div>
            </div>

            <!-- Evidências (Inicialmente vazio na criação) -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="bi bi-paperclip me-2"></i>Evidências Iniciais</h5>
                    <p class="text-muted">Selecione arquivos (imagens, documentos) para anexar como evidência inicial.</p>
                    <input type="file" name="evidencias" multiple class="form-control" />
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i> Registrar Não Conformidade
                </button>
            </div>
        </div>
        
        <!-- Outras abas desabilitadas na criação -->
        <div class="tab-pane fade" id="contencao" role="tabpanel">
            <div class="alert alert-warning m-3">Salve a identificação primeiro para acessar esta etapa.</div>
        </div>
        <div class="tab-pane fade" id="analise" role="tabpanel">
            <div class="alert alert-warning m-3">Salve a identificação primeiro para acessar esta etapa.</div>
        </div>
        <div class="tab-pane fade" id="corretivas" role="tabpanel">
            <div class="alert alert-warning m-3">Salve a identificação primeiro para acessar esta etapa.</div>
        </div>
        <div class="tab-pane fade" id="verificacao" role="tabpanel">
            <div class="alert alert-warning m-3">Salve a identificação primeiro para acessar esta etapa.</div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function calcularPrazo() {
            var dataOcorrencia = document.getElementById('dataOcorrencia').value;
            if (dataOcorrencia) {
                var data = new Date(dataOcorrencia);
                data.setDate(data.getDate() + 20); // Adiciona 20 dias
                
                var dia = String(data.getDate()).padStart(2, '0');
                var mes = String(data.getMonth() + 1).padStart(2, '0');
                var ano = data.getFullYear();
                
                document.getElementById('prazoConclusao').value = ano + '-' + mes + '-' + dia;
            }
        }
    </script>
}

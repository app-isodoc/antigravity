<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Isodoc Admin SaaS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background: white;
            border-right: 1px solid #e9ecef;
            z-index: 1000;
            transition: all 0.3s;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
        }

        .brand-logo {
            font-size: 1.2rem;
            font-weight: 700;
            color: #1e293b;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .nav-link {
            color: #64748b;
            padding: 0.8rem 1.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            text-decoration: none;
            border-left: 3px solid transparent;
        }

        .nav-link:hover, .nav-link.active {
            color: #0ea5e9;
            background-color: #f0f9ff;
            border-left-color: #0ea5e9;
        }

        .nav-link i {
            margin-right: 0.8rem;
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

        /* Submenu */
        .submenu {
            padding-left: 0;
            list-style: none;
            background-color: #f8fafc;
            display: none; /* Hidden by default */
        }
        
        .submenu.show {
            display: block;
        }

        .submenu .nav-link {
            padding-left: 3.5rem;
            font-size: 0.9rem;
            border-left: none;
        }

        .nav-item-has-submenu > .nav-link {
            justify-content: space-between;
        }
        
        .nav-item-has-submenu > .nav-link::after {
            content: "\F282"; /* bi-chevron-down */
            font-family: "bootstrap-icons";
            font-size: 0.8rem;
            transition: transform 0.2s;
        }

        .nav-item-has-submenu > .nav-link[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            padding: 2rem;
            transition: all 0.3s;
        }

        /* Topbar */
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-left: 260px;
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 900;
            height: 70px;
        }
        
        .content-wrapper {
            margin-top: 70px;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
        }

        .avatar {
            width: 35px;
            height: 35px;
            background-color: #0ea5e9;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .badge-role {
            background-color: #e0f2fe;
            color: #0284c7;
            font-size: 0.7rem;
            padding: 2px 8px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <a href="/AdminSaaS" class="brand-logo">
                <i class="bi bi-shield-check text-primary me-2"></i> Admin SaaS
            </a>
        </div>
        <div class="d-flex flex-column py-3">
            <a href="/AdminSaaS" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-grid"></i> Dashboard
            </a>

            <!-- Clientes -->
            <div class="nav-item-has-submenu">
                <a href="#" class="nav-link" data-bs-toggle="collapse" data-bs-target="#submenu-clientes" aria-expanded="false">
                    <div class="d-flex align-items-center"><i class="bi bi-people"></i> Clientes</div>
                </a>
                <ul class="submenu collapse" id="submenu-clientes">
                    <li><a href="/AdminSaaS/Clients" class="nav-link">Lista de Clientes</a></li>
                    <li><a href="/AdminSaaS/CreateClient" class="nav-link">Novo Cliente</a></li>
                </ul>
            </div>

            <!-- Parceiros -->
            <div class="nav-item-has-submenu">
                <a href="#" class="nav-link" data-bs-toggle="collapse" data-bs-target="#submenu-parceiros" aria-expanded="false">
                    <div class="d-flex align-items-center"><i class="bi bi-person-badge"></i> Parceiros</div>
                </a>
                <ul class="submenu collapse" id="submenu-parceiros">
                    <li><a href="#" class="nav-link">Gerenciar Parceiros</a></li>
                    <li><a href="#" class="nav-link">Comissões</a></li>
                </ul>
            </div>

            <!-- Planos e Assinaturas -->
            <div class="nav-item-has-submenu">
                <a href="#" class="nav-link" data-bs-toggle="collapse" data-bs-target="#submenu-planos" aria-expanded="false">
                    <div class="d-flex align-items-center"><i class="bi bi-credit-card"></i> Planos e Assinaturas</div>
                </a>
                <ul class="submenu collapse" id="submenu-planos">
                    <li><a href="#" class="nav-link">Planos</a></li>
                    <li><a href="#" class="nav-link">Cupons</a></li>
                    <li><a href="#" class="nav-link">Períodos de Teste</a></li>
                </ul>
            </div>

            <!-- Financeiro -->
            <div class="nav-item-has-submenu">
                <a href="#" class="nav-link" data-bs-toggle="collapse" data-bs-target="#submenu-financeiro" aria-expanded="false">
                    <div class="d-flex align-items-center"><i class="bi bi-wallet2"></i> Financeiro</div>
                </a>
                <ul class="submenu collapse" id="submenu-financeiro">
                    <li><a href="#" class="nav-link">Faturamento</a></li>
                    <li><a href="#" class="nav-link">Pagamentos</a></li>
                    <li><a href="#" class="nav-link">Relatórios</a></li>
                </ul>
            </div>

            <!-- Comunicação -->
            <div class="nav-item-has-submenu">
                <a href="#" class="nav-link" data-bs-toggle="collapse" data-bs-target="#submenu-comunicacao" aria-expanded="false">
                    <div class="d-flex align-items-center"><i class="bi bi-envelope"></i> Comunicação</div>
                </a>
                <ul class="submenu collapse" id="submenu-comunicacao">
                    <li><a href="#" class="nav-link">Emails Automáticos</a></li>
                    <li><a href="#" class="nav-link">Helpdesk</a></li>
                </ul>
            </div>

            <a href="#" class="nav-link">
                <i class="bi bi-gear"></i> Configurações
            </a>
        </div>
    </nav>

    <!-- Topbar -->
    <div class="topbar">
        <div class="d-flex align-items-center">
            <h5 class="mb-0 text-muted">Painel Administrativo SaaS</h5>
        </div>
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-link text-secondary position-relative">
                <i class="bi bi-bell fs-5"></i>
                <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
                    <span class="visually-hidden">New alerts</span>
                </span>
            </button>
            
            <div class="dropdown">
                <div class="user-profile" data-bs-toggle="dropdown">
                    <div class="text-end me-2 d-none d-md-block">
                        <div class="fw-bold small">Admin SaaS</div>
                        <div class="badge-role">Administrador</div>
                    </div>
                    <div class="avatar">AS</div>
                </div>
                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                    <li><div class="dropdown-header">Minha Conta<br><small class="text-muted">consultoriaviso@gmail.com</small></div></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Perfil</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configurações</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Sair</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@using Microsoft.AspNetCore.Identity
@using Isodoc.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser? user = null;
    if (SignInManager.IsSignedIn(User))
    {
        user = await UserManager.GetUserAsync(User);
    }
}

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User) && user != null)
{
    <li class="nav-item me-3 text-end d-none d-md-block lh-1">
        <div class="fw-bold text-dark" style="font-size: 0.9rem;">@user.Nome</div>
        <div class="text-muted small" style="font-size: 0.75rem;">@user.Email</div>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-danger btn-sm d-flex align-items-center" title="Sair do sistema">
                <i class="bi bi-box-arrow-right me-1"></i> Sair
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-person-circle me-1"></i> Login
        </a>
    </li>
}
</ul>

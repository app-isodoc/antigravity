@model List<Isodoc.Web.Models.Notification>

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
        @foreach (var notification in Model)
        {
            <a href="@(notification.Link ?? "#")" 
               class="list-group-item list-group-item-action @(notification.IsRead ? "" : "bg-light fw-bold")"
               onclick="markAsRead('@notification.Id')">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">@notification.Title</h6>
                    <small class="text-muted">@notification.CreatedAt.ToString("dd/MM HH:mm")</small>
                </div>
                <p class="mb-1 small">@notification.Message</p>
            </a>
        }
    </div>
}
else
{
    <div class="p-3 text-center text-muted">
        <small>Nenhuma notificação.</small>
    </div>
}

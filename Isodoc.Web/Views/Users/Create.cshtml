@model Isodoc.Web.Controllers.UserCreateViewModel
@{
    ViewData["Title"] = "Novo Usuário";
    var modules = ViewBag.Modules as List<Isodoc.Web.Models.SystemModule>;
}

<div class="mb-4">
    <h2><i class="bi bi-person-plus me-2"></i>Novo Usuário</h2>
    <p class="text-muted">Cadastre um novo usuário e defina suas permissões</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4" id="userTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">
                        <i class="bi bi-person-circle me-1"></i> Informações Gerais
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="permissions-tab" data-bs-toggle="tab" data-bs-target="#permissions" type="button">
                        <i class="bi bi-shield-lock me-1"></i> Permissões
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="userTabsContent">
                <!-- Aba 1: Informações Gerais -->
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <h5 class="mb-3"><i class="bi bi-person-badge me-2"></i>Dados Pessoais</h5>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Nome" class="form-label">Nome Completo *</label>
                            <input asp-for="Nome" class="form-control" placeholder="Nome completo do usuário" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">E-mail *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="email@empresa.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Telefone" class="form-label">Telefone</label>
                            <input asp-for="Telefone" class="form-control" placeholder="(11) 99999-9999" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Role" class="form-label">Função no Sistema *</label>
                            <select asp-for="Role" class="form-select" required>
                                <option value="">Selecione...</option>
                                <option value="@Isodoc.Web.Models.UserRole.Usuario">Usuário</option>
                                <option value="@Isodoc.Web.Models.UserRole.Administrador">Administrador</option>
                                <option value="@Isodoc.Web.Models.UserRole.Seguidor">Seguidor</option>
                            </select>
                            <small class="form-text text-muted">
                                <strong>Usuário:</strong> Acesso conforme permissões | 
                                <strong>Administrador:</strong> Acesso total | 
                                <strong>Seguidor:</strong> Apenas visualização
                            </small>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-briefcase me-2"></i>Informações Profissionais</h5>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Funcao" class="form-label">Cargo</label>
                            <input asp-for="Funcao" class="form-control" placeholder="Ex: Analista de Qualidade" />
                            <small class="form-text text-muted">Cargo na empresa</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Departamento" class="form-label">Departamento</label>
                            <input asp-for="Departamento" class="form-control" placeholder="Ex: Qualidade" />
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="EnviarCredenciais" class="form-check-input" type="checkbox" checked />
                        <label asp-for="EnviarCredenciais" class="form-check-label">
                            Enviar credenciais de acesso por e-mail automaticamente
                        </label>
                        <small class="form-text text-muted d-block ms-4">
                            Um e-mail com as credenciais de acesso será enviado para o usuário
                        </small>
                    </div>
                </div>

                <!-- Aba 2: Permissões -->
                <div class="tab-pane fade" id="permissions" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5><i class="bi bi-grid-3x3-gap me-2"></i>Permissões de Módulos</h5>
                        <div>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="selecionarTodos()">
                                <i class="bi bi-check-all"></i> Selecionar Todos
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="desmarcarTodos()">
                                <i class="bi bi-x-circle"></i> Desmarcar Todos
                            </button>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Selecione os módulos que o usuário poderá acessar. As permissões específicas serão definidas automaticamente com base na função escolhida.
                    </div>

                    <div class="row">
                        @if (modules != null)
                        {
                            @foreach (var module in modules)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card module-card">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input module-checkbox" type="checkbox" 
                                                       name="selectedModules" value="@module.Name" id="module_@module.Name">
                                                <label class="form-check-label w-100" for="module_@module.Name">
                                                    <div class="d-flex align-items-start">
                                                        <i class="@module.Icon me-2 fs-4 text-primary"></i>
                                                        <div>
                                                            <strong>@module.DisplayName</strong>
                                                            <p class="text-muted small mb-0">@module.Description</p>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Criar Usuário
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .module-card {
        border: 2px solid #e5e7eb;
        transition: all 0.2s;
        cursor: pointer;
    }
    .module-card:hover {
        border-color: #3b82f6;
        box-shadow: 0 2px 8px rgba(59, 130, 246, 0.1);
    }
    .module-checkbox:checked ~ label {
        color: #1e40af;
    }
</style>

<script>
    function selecionarTodos() {
        document.querySelectorAll('.module-checkbox').forEach(cb => cb.checked = true);
    }

    function desmarcarTodos() {
        document.querySelectorAll('.module-checkbox').forEach(cb => cb.checked = false);
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

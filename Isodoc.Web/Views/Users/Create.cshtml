@model Isodoc.Web.Controllers.UserCreateViewModel
@{
    ViewData["Title"] = "Novo Usuário";
    var departamentos = ViewBag.Departamentos as List<Isodoc.Web.Models.Departamento>;
}

<div class="mb-4">
    <h2><i class="bi bi-person-plus me-2"></i>Novo Usuário</h2>
    <p class="text-muted">Cadastre um novo usuário para acessar o sistema</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Nome" class="form-label">Nome Completo *</label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome do usuário" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email *</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="usuario@empresa.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <small class="text-muted">Este será o login de acesso do usuário</small>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="Funcao" class="form-label">Cargo/Função *</label>
                    <input asp-for="Funcao" class="form-control" placeholder="Ex: Analista de Qualidade" required />
                </div>
                <div class="col-md-4">
                    <label asp-for="Departamento" class="form-label">Departamento</label>
                    <select asp-for="Departamento" class="form-select">
                        <option value="">Selecione o departamento</option>
                        @if (departamentos != null)
                        {
                            foreach (var depto in departamentos)
                            {
                                <option value="@depto.Nome">@depto.Nome</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="Telefone" class="form-label">Telefone</label>
                    <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="form-label">Nível de Acesso *</label>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card h-100 border-primary bg-light">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Role" value="2" id="roleAdmin">
                                    <label class="form-check-label fw-bold" for="roleAdmin">
                                        Administrador
                                    </label>
                                </div>
                                <p class="small text-muted mt-2 mb-0">Acesso total a todas as funcionalidades e configurações do sistema.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Role" value="1" id="roleGestor" checked>
                                    <label class="form-check-label fw-bold" for="roleGestor">
                                        Gestor
                                    </label>
                                </div>
                                <p class="small text-muted mt-2 mb-0">Pode gerenciar documentos, não conformidades e visualizar indicadores.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Role" value="0" id="roleUsuario">
                                    <label class="form-check-label fw-bold" for="roleUsuario">
                                        Usuário Comum
                                    </label>
                                </div>
                                <p class="small text-muted mt-2 mb-0">Acesso básico para visualização de documentos e registro de ocorrências.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Uma senha provisória será gerada automaticamente e enviada para o email do usuário.
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i> Cadastrar Usuário
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

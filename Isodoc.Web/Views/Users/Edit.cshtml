@model Isodoc.Web.Controllers.UserEditViewModel
@{
    ViewData["Title"] = "Editar Usuário";
    var modules = ViewBag.Modules as List<Isodoc.Web.Models.SystemModule>;
}

<div class="mb-4">
    <h2><i class="bi bi-pencil-square me-2"></i>Editar Usuário</h2>
    <p class="text-muted">Atualize as informações e permissões do usuário</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4" id="userTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">
                        <i class="bi bi-person-circle me-1"></i> Informações Gerais
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="permissions-tab" data-bs-toggle="tab" data-bs-target="#permissions" type="button">
                        <i class="bi bi-shield-lock me-1"></i> Permissões
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="userTabsContent">
                <!-- Aba 1: Informações Gerais -->
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Nome" class="form-label">Nome Completo *</label>
                            <input asp-for="Nome" class="form-control" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">E-mail *</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="Telefone" class="form-label">Telefone</label>
                            <input asp-for="Telefone" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Role" class="form-label">Função no Sistema *</label>
                            <select asp-for="Role" class="form-select" required>
                                <option value="@Isodoc.Web.Models.UserRole.Usuario">Usuário</option>
                                <option value="@Isodoc.Web.Models.UserRole.Administrador">Administrador</option>
                                <option value="@Isodoc.Web.Models.UserRole.Seguidor">Seguidor</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Ativo" class="form-label">Status</label>
                            <select asp-for="Ativo" class="form-select">
                                <option value="true">Ativo</option>
                                <option value="false">Inativo</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Funcao" class="form-label">Cargo</label>
                            <input asp-for="Funcao" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Departamento" class="form-label">Departamento</label>
                            <input asp-for="Departamento" class="form-control" />
                        </div>
                    </div>
                </div>

                <!-- Aba 2: Permissões Granulares -->
                <div class="tab-pane fade" id="permissions" role="tabpanel">
                    <h5 class="mb-3"><i class="bi bi-grid-3x3-gap me-2"></i>Permissões de Módulos</h5>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 30%">Módulo</th>
                                    <th class="text-center">Visualizar</th>
                                    <th class="text-center">Criar</th>
                                    <th class="text-center">Editar</th>
                                    <th class="text-center">Excluir</th>
                                    <th class="text-center">Aprovar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (modules != null)
                                {
                                    @foreach (var module in modules)
                                    {
                                        var permissionObj = FindPermission(module.Name);
                                        var hasPermission = permissionObj != null;

                                        <tr>
                                            <td>
                                                <i class="@module.Icon me-2"></i>
                                                <strong>@module.DisplayName</strong>
                                            </td>
                                            <td class="text-center">
                                                <input type="checkbox" class="form-check-input" 
                                                       name="modulePermissions[@module.Name].CanView" 
                                                       value="true" 
                                                       @(hasPermission && GetPermissionBool(permissionObj, "CanView") ? "checked" : "") />
                                            </td>
                                            <td class="text-center">
                                                <input type="checkbox" class="form-check-input" 
                                                       name="modulePermissions[@module.Name].CanCreate" 
                                                       value="true" 
                                                       @(hasPermission && GetPermissionBool(permissionObj, "CanCreate") ? "checked" : "") />
                                            </td>
                                            <td class="text-center">
                                                <input type="checkbox" class="form-check-input" 
                                                       name="modulePermissions[@module.Name].CanEdit" 
                                                       value="true" 
                                                       @(hasPermission && GetPermissionBool(permissionObj, "CanEdit") ? "checked" : "") />
                                            </td>
                                            <td class="text-center">
                                                <input type="checkbox" class="form-check-input" 
                                                       name="modulePermissions[@module.Name].CanDelete" 
                                                       value="true" 
                                                       @(hasPermission && GetPermissionBool(permissionObj, "CanDelete") ? "checked" : "") />
                                            </td>
                                            <td class="text-center">
                                                @if (module.RequiresApproval)
                                                {
                                                    <input type="checkbox" class="form-check-input" 
                                                           name="modulePermissions[@module.Name].CanApprove" 
                                                           value="true" 
                                                           @(hasPermission && GetPermissionBool(permissionObj, "CanApprove") ? "checked" : "") />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@functions {
    private string GetModuleName(object? item)
    {
        if (item == null) return "";
        var type = item.GetType();
        var prop = type.GetProperty("ModuleName");
        if (prop != null)
        {
            var val = prop.GetValue(item);
            return val?.ToString() ?? "";
        }
        return item.ToString() ?? "";
    }

    private object? FindPermission(string moduleName)
    {
        if (Model?.Permissions == null) return null;
        foreach (var p in Model.Permissions)
        {
            if (p == null) continue;
            var type = p.GetType();
            var prop = type.GetProperty("ModuleName");
            if (prop != null)
            {
                var mn = prop.GetValue(p)?.ToString();
                if (string.Equals(mn, moduleName, StringComparison.OrdinalIgnoreCase)) return p;
            }
            else
            {
                // Permissions might be a list of strings (module names)
                if (string.Equals(p.ToString(), moduleName, StringComparison.OrdinalIgnoreCase))
                {
                    // return an anonymous object with default false flags
                    return new { CanView = false, CanCreate = false, CanEdit = false, CanDelete = false, CanApprove = false };
                }
            }
        }
        return null;
    }

    private bool GetPermissionBool(object? permissionObj, string propName)
    {
        if (permissionObj == null) return false;
        var type = permissionObj.GetType();
        var prop = type.GetProperty(propName);
        if (prop != null && prop.PropertyType == typeof(bool))
        {
            return (bool)(prop.GetValue(permissionObj) ?? false);
        }
        return false;
    }
}
